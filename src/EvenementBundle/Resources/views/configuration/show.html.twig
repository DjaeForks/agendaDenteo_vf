{% extends 'base.html.twig' %}

{% block body %}
    <h1>Configuration</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ configuration.id }}</td>
            </tr>
            <tr>
                <th>Datedeb</th>
                <td>{% if configuration.dateDeb %}{{ configuration.dateDeb|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if configuration.dateFin %}{{ configuration.dateFin|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Creneau</th>
                <td>{{ configuration.creneau }}</td>
            </tr>
            <tr>
                <th>Firstday</th>
                <td>{{ configuration.firstDay }}</td>
            </tr>
            <tr>
                <th>Weeksnumber</th>
                <td>{% if configuration.weeksNumber %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('configuration_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('configuration_edit', { 'id': configuration.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
